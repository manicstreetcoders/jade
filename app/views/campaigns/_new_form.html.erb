<%= simple_form_for @campaign, :html => { :class => 'form-horizontal' } do |f| %>
<!-- Calendar -->
  <fieldset>
    <div class="control-group">
      <%= f.input :period, label: '기간:', input_html: { id: 'campaign_period', value: eval("String(Time.now).split[0] + ' - ' + String(Time.at(Time.now + 60*60*24*7)).split[0]") } %>
    </div>
    <div class="control-group">
      <%= f.input :name, label: '캠페인 제목:' %>
    </div>
    <div class='control-group'>
      <%= f.button :submit %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), campaigns_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
